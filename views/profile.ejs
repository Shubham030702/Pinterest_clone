<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>PixelVista</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <link rel="stylesheet" href="/stylesheets/profile.css">
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Dosis:wght@200..800&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link rel="shortcut icon" href="images/favicon.ico" type="image/x-icon">
</head>

<body>
  <div class="navbar">
    <div class="feed" onclick="window.location.href='/feed'">Feed</div>
    <a id="site-name" href="/feed">PixelVista</a>
    <div id="more">
      <button class="dropbtn">More <span id="arrow-icon" class="arrow-down">&#9660;</span></button>
      <div id="dropdown-content" class="dropdown-content">
        <a href="/profile">Profile</a>
        <a href="/upload">Upload</a>
        <a href="/logout">Logout</a>
      </div>
    </div>
  </div>
  <div id="main">
    <div class="containerpers">
      <div class="cardpers">
        <div class="profile-picture">
          <img src="/images/human_11305946.png" alt="Profile Picture">
        </div>
        <h2 class="name">
          <%= user.fullname %>
        </h2>
        <h3 class="username">@<%=user.username%>
        </h3>
        <p class="tagline">Lorem ipsum dolor sit amet, consectetur adipisicing.</p>
        <p class="description">some description</p>
        <button class="edit" id="edit">Edit Profile</button>

        <div id="myModal" class="modal">
          <div class="modal-content">
            <span class="close">&times;</span>
            <form id="profile-form" action="/submit_profile" method="post">
              <div>
                <label for="bio">Bio:</label><br>
                <textarea id="bio" name="bio"  placeholder="Enter your bio"></textarea>
              </div>
              <div>
                <label for="description">Description:</label><br>
                <textarea id="description" name="description"  placeholder="Enter description"></textarea>
              </div>
              <button type="submit">Submit</button>
            </form>
          </div>
        </div>
      </div>
    </div>
    <div class="container">
      <div class="cards flex">
        <% user.posts.forEach(function(post){%>
          <div class="card">
            <img src="https://res.cloudinary.com/dwzejho0w/image/upload/v1708087070/<%=post.image%>"
              class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title">
                <%=post.imageText%>
              </h5>
              <button class="delete" onclick="window.location.href='/delete/<%=post._id%>'"><i
                  class="material-icons">delete</i>
              </button>
            </div>
          </div>
          <%})%>
      </div>
    </div>
  </div>
  <script src="/javascripts/profile.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
    crossorigin="anonymous"></script>
</body>

</html>