<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <link rel="stylesheet" href="/stylesheets/feed.css">
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">

</head>

<body>
  <div class="navbar">
    <div class="feed" onclick="window.location.href='/feed'">Feed</div>
    <a id="site-name" href="/feed">PixelVista</a>
    <div id="more">
      <button class="dropbtn">More <span id="arrow-icon" class="arrow-down">&#9660;</span></button>
      <div id="dropdown-content" class="dropdown-content">
        <a href="/profile">Profile</a>
        <a href="/upload">Upload</a>
        <a href="/logout">Logout</a>
      </div>
    </div>
  </div>
  <div class="card-container">
    <div class="cards flex" onclick="showModal()">
      <% post.forEach(function(post){%>
          <div class="card" >
            <div class="overlay-text top-text">
              <div class="dp">
                <img
                  src="https://images.unsplash.com/photo-1682685797229-b2930538da47?q=80&w=1887&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDF8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
                  alt="">
              </div>
              <div class="name" onclick="window.location.href='/user/<%=post.user%>'">
                <%=post.user.fullname%>
              </div>
            </div>
            <img class="card-image" src="/images/uploads/<%=post.image%>" alt="Card Image">
            <div class="overlay-text bottom-text">
              <%=post.imageText%>
            </div>
          </div>
          <div class="modal-container" id="modalContainer">
            <div class="modal-content">
              <span class="close" onclick="hideModal()">&times;</span>
              <a href="/images/uploads/<%=post.image%>" download="<%=post.imageText%>.zip"><img src="/images/download_10068752.png" alt="download"></a>
            </div>
          </div>
          <%})%>
        </div>
  </div>
  <script src="https://code.jquery.com/jquery-3.3.1.js"></script>
  <script src="app.js"></script>
  <script src="/javascripts/feed.js"></script>
</body>


</html>